@model AdministratorWeb.Models.Room
@{
    ViewData["Title"] = "Room Details";
    var usersCount = ViewBag.UsersCount ?? 0;
    var beaconsCount = ViewBag.BeaconsCount ?? 0;
}

<!-- Dashboard Header -->
<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Room Details</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="home" class="w-4 h-4 mr-2"></i>
                Detailed information for: @Model.Name
            </p>
        </div>
        <div class="flex items-center space-x-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-brand-600/50 hover:bg-brand-600 text-brand-300 hover:text-white text-sm font-medium rounded-xl transition-all duration-200">
                <i data-lucide="edit" class="w-4 h-4 mr-2"></i>
                Edit Room
            </a>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-xl transition-all duration-200">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                Back to Rooms
            </a>
        </div>
    </div>
</div>

<!-- Room Status Banner -->
<div class="mb-8 animate-slide-up" style="animation-delay: 0.1s;">
    @if (Model.IsActive)
    {
        <div class="bg-green-500/10 border border-green-500/30 rounded-2xl p-6">
            <div class="flex items-center">
                <div class="p-2 bg-green-500/20 rounded-xl mr-3">
                    <i data-lucide="check-circle" class="h-5 w-5 text-green-400"></i>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-green-400 mb-1">Room Active</h3>
                    <p class="text-sm text-green-300">This room is available for user and beacon assignments</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-orange-500/10 border border-orange-500/30 rounded-2xl p-6">
            <div class="flex items-center">
                <div class="p-2 bg-orange-500/20 rounded-xl mr-3">
                    <i data-lucide="pause-circle" class="h-5 w-5 text-orange-400"></i>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-orange-400 mb-1">Room Inactive</h3>
                    <p class="text-sm text-orange-300">This room is not available for new assignments</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Room Information -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <!-- Basic Information -->
    <div class="lg:col-span-2">
        <div class="bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.2s;">
            <div class="px-8 py-6 border-b border-slate-700/50">
                <h3 class="text-xl font-bold text-white flex items-center">
                    <i data-lucide="info" class="w-5 h-5 mr-2 text-slate-400"></i>
                    Basic Information
                </h3>
            </div>
            <div class="px-8 py-6 space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Room Name</label>
                        <div class="text-lg font-semibold text-white">@Model.Name</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Room ID</label>
                        <div class="text-lg font-semibold text-white">#@Model.Id</div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Description</label>
                        <div class="text-white bg-slate-700/30 rounded-xl p-4">@Model.Description</div>
                    </div>
                }
                else
                {
                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Description</label>
                        <div class="text-slate-500 italic">No description provided</div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Usage Statistics -->
    <div>
        <div class="bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.3s;">
            <div class="px-8 py-6 border-b border-slate-700/50">
                <h3 class="text-xl font-bold text-white flex items-center">
                    <i data-lucide="bar-chart" class="w-5 h-5 mr-2 text-slate-400"></i>
                    Usage Statistics
                </h3>
            </div>
            <div class="px-8 py-6 space-y-4">
                <div class="flex items-center justify-between p-4 bg-slate-700/30 rounded-xl">
                    <div class="flex items-center">
                        <div class="p-2 bg-blue-500/20 rounded-lg mr-3">
                            <i data-lucide="users" class="w-4 h-4 text-blue-400"></i>
                        </div>
                        <span class="text-slate-300">Users Assigned</span>
                    </div>
                    <span class="text-xl font-bold text-white">@usersCount</span>
                </div>
                
                <div class="flex items-center justify-between p-4 bg-slate-700/30 rounded-xl">
                    <div class="flex items-center">
                        <div class="p-2 bg-purple-500/20 rounded-lg mr-3">
                            <i data-lucide="radio" class="w-4 h-4 text-purple-400"></i>
                        </div>
                        <span class="text-slate-300">Beacons Assigned</span>
                    </div>
                    <span class="text-xl font-bold text-white">@beaconsCount</span>
                </div>
                
                <div class="flex items-center justify-between p-4 bg-slate-700/30 rounded-xl">
                    <div class="flex items-center">
                        <div class="p-2 bg-green-500/20 rounded-lg mr-3">
                            <i data-lucide="activity" class="w-4 h-4 text-green-400"></i>
                        </div>
                        <span class="text-slate-300">Total Usage</span>
                    </div>
                    <span class="text-xl font-bold text-white">@(usersCount + beaconsCount)</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Audit Information -->
<div class="bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.4s;">
    <div class="px-8 py-6 border-b border-slate-700/50">
        <h3 class="text-xl font-bold text-white flex items-center">
            <i data-lucide="clock" class="w-5 h-5 mr-2 text-slate-400"></i>
            Audit Information
        </h3>
    </div>
    <div class="px-8 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-slate-700/30 rounded-xl p-4">
                <div class="text-sm text-slate-400 mb-1">Created</div>
                <div class="text-white font-semibold">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                <div class="text-sm text-slate-400">@Model.CreatedAt.ToString("HH:mm")</div>
            </div>
            
            <div class="bg-slate-700/30 rounded-xl p-4">
                <div class="text-sm text-slate-400 mb-1">Last Updated</div>
                <div class="text-white font-semibold">@Model.UpdatedAt.ToString("MMM dd, yyyy")</div>
                <div class="text-sm text-slate-400">@Model.UpdatedAt.ToString("HH:mm")</div>
            </div>
            
            <div class="bg-slate-700/30 rounded-xl p-4">
                <div class="text-sm text-slate-400 mb-1">Created By</div>
                <div class="text-white font-semibold">
                    @if (!string.IsNullOrEmpty(Model.CreatedBy))
                    {
                        @Model.CreatedBy
                    }
                    else
                    {
                        <span class="text-slate-500 italic">System</span>
                    }
                </div>
            </div>
            
            <div class="bg-slate-700/30 rounded-xl p-4">
                <div class="text-sm text-slate-400 mb-1">Updated By</div>
                <div class="text-white font-semibold">
                    @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                    {
                        @Model.UpdatedBy
                    }
                    else
                    {
                        <span class="text-slate-500 italic">System</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize lucide icons when page loads
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}