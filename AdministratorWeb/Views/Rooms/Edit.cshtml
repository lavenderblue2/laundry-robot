@model AdministratorWeb.Models.Room
@{
    ViewData["Title"] = "Edit Room";
}

<!-- Dashboard Header -->
<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Edit Room</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="home" class="w-4 h-4 mr-2"></i>
                Modify room template: @Model.Name
            </p>
        </div>
        <div class="flex items-center space-x-3">
            <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-xl transition-all duration-200">
                <i data-lucide="eye" class="w-4 h-4 mr-2"></i>
                View Details
            </a>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-xl transition-all duration-200">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                Back to Rooms
            </a>
        </div>
    </div>
</div>

<!-- Edit Form -->
<div class="max-w-4xl mx-auto bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.1s;">
    <div class="px-8 py-8">
        <form asp-action="Edit" method="post" class="space-y-8">
            <div asp-validation-summary="ModelOnly" class="text-red-400 bg-red-900/20 border border-red-700/50 rounded-xl p-4"></div>
            
            <!-- Hidden fields -->
            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedAt" type="hidden" />
            <input asp-for="CreatedBy" type="hidden" />
            
            <!-- Basic Information -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-brand-500/20 rounded-xl mr-3">
                        <i data-lucide="info" class="h-5 w-5 text-brand-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Basic Information</h3>
                </div>
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label asp-for="Name" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                            <i data-lucide="tag" class="w-4 h-4 mr-2 text-slate-400"></i>
                            Room Name
                        </label>
                        <input asp-for="Name" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                        <span asp-validation-for="Name" class="text-red-400 text-sm mt-1 flex items-center">
                                                    </span>
                    </div>
                </div>
            </div>

            <!-- Optional Information -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-orange-500/20 rounded-xl mr-3">
                        <i data-lucide="file-text" class="h-5 w-5 text-orange-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Additional Information</h3>
                </div>
                <div>
                    <label asp-for="Description" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                        <i data-lucide="message-square" class="w-4 h-4 mr-2 text-slate-400"></i>
                        Description (Optional)
                    </label>
                    <textarea asp-for="Description" rows="4" placeholder="Optional notes or description about this room..." class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent resize-none transition-all duration-200"></textarea>
                    <span asp-validation-for="Description" class="text-red-400 text-sm mt-1 flex items-center">
                                            </span>
                </div>
            </div>

            <!-- Detection Mode Notice -->
            <div class="bg-cyan-500/10 border border-cyan-500/30 rounded-2xl p-6">
                <div class="flex items-center mb-2">
                    <div class="p-2 bg-cyan-500/20 rounded-xl mr-3">
                        <i data-lucide="radio" class="h-5 w-5 text-cyan-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Current Detection Mode</h3>
                </div>
                <div class="flex items-center space-x-2">
                    @if (ViewBag.DetectionMode == AdministratorWeb.Models.RoomDetectionMode.Beacon)
                    {
                        <div class="inline-flex items-center px-4 py-2 bg-cyan-500/20 rounded-xl border border-cyan-500/30">
                            <i data-lucide="bluetooth" class="w-4 h-4 mr-2 text-cyan-400"></i>
                            <span class="text-cyan-200 font-semibold">Bluetooth Beacon Detection</span>
                        </div>
                    }
                    else
                    {
                        <div class="inline-flex items-center px-4 py-2 bg-purple-500/20 rounded-xl border border-purple-500/30">
                            <i data-lucide="palette" class="w-4 h-4 mr-2 text-purple-400"></i>
                            <span class="text-purple-200 font-semibold">Floor Color Detection</span>
                        </div>
                    }
                </div>
                <p class="text-xs text-cyan-300 mt-3 flex items-center">
                    <i data-lucide="info" class="w-3 h-3 mr-1"></i>
                    Change detection mode in <a asp-controller="Dashboard" asp-action="Settings" class="underline hover:text-cyan-200">Settings</a>
                </p>
            </div>

            <!-- Floor Color Settings (Color Mode Only) -->
            @if (ViewBag.DetectionMode == AdministratorWeb.Models.RoomDetectionMode.Color)
            {
                <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                    <div class="flex items-center mb-6">
                        <div class="p-2 bg-purple-500/20 rounded-xl mr-3">
                            <i data-lucide="palette" class="h-5 w-5 text-purple-400"></i>
                        </div>
                        <h3 class="text-xl font-bold text-white">Floor Color Detection</h3>
                    </div>
                    <div class="space-y-4">
                        <p class="text-sm text-slate-400">Set the floor color for this room. Robots will detect this color to know they've arrived.</p>
                        <div class="flex space-x-2">
                            <input type="color" id="floorColorPicker" value="@(Model.FloorColorR.HasValue ? $"#{Model.FloorColorR.Value:X2}{Model.FloorColorG.Value:X2}{Model.FloorColorB.Value:X2}" : "#000000")"
                                   class="w-20 h-10 rounded-xl border-2 border-slate-600/50 bg-slate-700/50 cursor-pointer"/>
                            <button type="button" onclick="clearFloorColor()" class="px-4 py-2 bg-slate-600/50 hover:bg-slate-600 text-white text-sm rounded-xl transition-all">
                                Clear
                            </button>
                        </div>
                        <div class="flex space-x-2">
                            <input asp-for="FloorColorR" type="number" min="0" max="255" placeholder="R"
                                   class="flex-1 px-3 py-2 bg-slate-600/50 border border-slate-500/50 text-white text-sm rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500/50"/>
                            <input asp-for="FloorColorG" type="number" min="0" max="255" placeholder="G"
                                   class="flex-1 px-3 py-2 bg-slate-600/50 border border-slate-500/50 text-white text-sm rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500/50"/>
                            <input asp-for="FloorColorB" type="number" min="0" max="255" placeholder="B"
                                   class="flex-1 px-3 py-2 bg-slate-600/50 border border-slate-500/50 text-white text-sm rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500/50"/>
                        </div>
                    </div>
                </div>
            }

            <!-- Beacon Assignment (Beacon Mode Only) -->
            @if (ViewBag.DetectionMode == AdministratorWeb.Models.RoomDetectionMode.Beacon)
            {
                <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                    <div class="flex items-center mb-6">
                        <div class="p-2 bg-cyan-500/20 rounded-xl mr-3">
                            <i data-lucide="bluetooth" class="h-5 w-5 text-cyan-400"></i>
                        </div>
                        <h3 class="text-xl font-bold text-white">Beacon Assignment</h3>
                    </div>
                    <div class="space-y-4">
                        <p class="text-sm text-slate-400">Beacons assigned to this room will be used for navigation. Manage beacons in the Beacons page.</p>
                        <div class="bg-slate-600/30 rounded-xl p-4">
                            <div class="text-sm text-slate-400 mb-1">Beacons Assigned to this Room</div>
                            <div class="text-2xl font-bold text-white">@ViewBag.BeaconsCount</div>
                        </div>
                        <a asp-controller="Beacon" asp-action="Index" class="inline-flex items-center px-4 py-2 bg-cyan-500/20 hover:bg-cyan-500/30 text-cyan-300 text-sm font-medium rounded-xl transition-all duration-200 border border-cyan-500/30">
                            <i data-lucide="settings" class="w-4 h-4 mr-2"></i>
                            Manage Beacons
                        </a>
                    </div>
                </div>
            }

            <!-- Settings -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-emerald-500/20 rounded-xl mr-3">
                        <i data-lucide="toggle-right" class="h-5 w-5 text-emerald-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Room Settings</h3>
                </div>
                <div class="flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="w-4 h-4 text-brand-600 bg-slate-600 border-slate-500 rounded focus:ring-brand-500 focus:ring-2" />
                    <label asp-for="IsActive" class="ml-3 text-slate-300 text-sm font-medium flex items-center">
                        <i data-lucide="check-circle" class="w-4 h-4 mr-2 text-slate-400"></i>
                        Active (available for assignments)
                    </label>
                </div>
            </div>

            <!-- Current Usage Information -->
            <div class="bg-blue-500/10 border border-blue-500/30 rounded-2xl p-6">
                <div class="flex items-center mb-4">
                    <div class="p-2 bg-blue-500/20 rounded-xl mr-3">
                        <i data-lucide="users" class="h-5 w-5 text-blue-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Current Usage</h3>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-slate-600/30 rounded-xl p-4">
                        <div class="text-sm text-slate-400 mb-1">Users Assigned</div>
                        <div class="text-2xl font-bold text-white">0</div>
                    </div>
                    <div class="bg-slate-600/30 rounded-xl p-4">
                        <div class="text-sm text-slate-400 mb-1">Beacons Assigned</div>
                        <div class="text-2xl font-bold text-white">0</div>
                    </div>
                </div>
                <div class="text-xs text-blue-300 mt-3 flex items-center">
                    <i data-lucide="info" class="w-3 h-3 mr-1"></i>
                    Changes to room name will affect all current assignments
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-700/50">
                <div class="text-sm text-slate-400 flex items-center">
                    <i data-lucide="info" class="w-4 h-4 mr-2"></i>
                    Changes will take effect immediately for all assignments
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Index" class="inline-flex items-center px-6 py-3 bg-slate-600/50 hover:bg-slate-600 text-white font-medium rounded-xl transition-all duration-200">
                        <i data-lucide="x" class="w-4 h-4 mr-2"></i>
                        Cancel
                    </a>
                    <button type="submit" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i data-lucide="save" class="w-4 h-4 mr-2"></i>
                        Save Changes
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Initialize lucide icons when page loads
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });

        // Sync color picker and RGB inputs
        document.getElementById('floorColorPicker').addEventListener('change', function() {
            const hex = this.value;
            document.getElementById('FloorColorR').value = parseInt(hex.substr(1, 2), 16);
            document.getElementById('FloorColorG').value = parseInt(hex.substr(3, 2), 16);
            document.getElementById('FloorColorB').value = parseInt(hex.substr(5, 2), 16);
        });

        ['FloorColorR', 'FloorColorG', 'FloorColorB'].forEach(id => {
            const el = document.getElementById(id);
            if (el) {
                el.addEventListener('input', function() {
                    const r = parseInt(document.getElementById('FloorColorR').value) || 0;
                    const g = parseInt(document.getElementById('FloorColorG').value) || 0;
                    const b = parseInt(document.getElementById('FloorColorB').value) || 0;
                    const hex = `#${r.toString(16).padStart(2, '0')}${g.toString(16).padStart(2, '0')}${b.toString(16).padStart(2, '0')}`;
                    document.getElementById('floorColorPicker').value = hex;
                });
            }
        });

        function clearFloorColor() {
            document.getElementById('FloorColorR').value = '';
            document.getElementById('FloorColorG').value = '';
            document.getElementById('FloorColorB').value = '';
            document.getElementById('floorColorPicker').value = '#000000';
        }
    </script>
}