@model AdministratorWeb.Models.Room
@{
    ViewData["Title"] = "Add New Room";
}

<!-- Dashboard Header -->
<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Add New Room</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="home" class="w-4 h-4 mr-2"></i>
                Create a new room template for assignments
            </p>
        </div>
        <div class="flex items-center space-x-3">
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-xl transition-all duration-200">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                Back to Rooms
            </a>
        </div>
    </div>
</div>

<!-- Create Form -->
<div class="max-w-4xl mx-auto bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.1s;">
    <div class="px-8 py-8">
        <form asp-action="Create" method="post" class="space-y-8">
            <div asp-validation-summary="ModelOnly" class="text-red-400 bg-red-900/20 border border-red-700/50 rounded-xl p-4"></div>
            
            <!-- Basic Information -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-brand-500/20 rounded-xl mr-3">
                        <i data-lucide="info" class="h-5 w-5 text-brand-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Basic Information</h3>
                </div>
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label asp-for="Name" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                            <i data-lucide="tag" class="w-4 h-4 mr-2 text-slate-400"></i>
                            Room Name
                        </label>
                        <input asp-for="Name" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" placeholder="e.g., Living Room A, Bedroom 101, Conference Room..." />
                  
                                                
                        <span asp-validation-for="Name" class="text-red-400 text-sm mt-1 flex items-center">
                           
                        </span>
                    </div>
                </div>
            </div>

            <!-- Optional Information -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-orange-500/20 rounded-xl mr-3">
                        <i data-lucide="file-text" class="h-5 w-5 text-orange-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Additional Information</h3>
                </div>
                <div>
                    <label asp-for="Description" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                        <i data-lucide="message-square" class="w-4 h-4 mr-2 text-slate-400"></i>
                        Description (Optional)
                    </label>
                    <textarea asp-for="Description" rows="4" placeholder="Optional notes or description about this room..." class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent resize-none transition-all duration-200"></textarea>
                    <span asp-validation-for="Description" class="text-red-400 text-sm mt-1 flex items-center">
                                            </span>
                </div>
            </div>

            <!-- Settings -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-emerald-500/20 rounded-xl mr-3">
                        <i data-lucide="toggle-right" class="h-5 w-5 text-emerald-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Room Settings</h3>
                </div>
                <div class="flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="w-4 h-4 text-brand-600 bg-slate-600 border-slate-500 rounded focus:ring-brand-500 focus:ring-2" />
                    <label asp-for="IsActive" class="ml-3 text-slate-300 text-sm font-medium flex items-center">
                        <i data-lucide="check-circle" class="w-4 h-4 mr-2 text-slate-400"></i>
                        Active (available for assignments)
                    </label>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-700/50">
                <div class="text-sm text-slate-400 flex items-center">
                    <i data-lucide="info" class="w-4 h-4 mr-2"></i>
                    Room will be available for user and beacon assignments once created
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Index" class="inline-flex items-center px-6 py-3 bg-slate-600/50 hover:bg-slate-600 text-white font-medium rounded-xl transition-all duration-200">
                        <i data-lucide="x" class="w-4 h-4 mr-2"></i>
                        Cancel
                    </a>
                    <button type="submit" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i data-lucide="save" class="w-4 h-4 mr-2"></i>
                        Create Room
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Initialize lucide icons when page loads
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}