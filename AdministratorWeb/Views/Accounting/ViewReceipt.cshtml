@model AdministratorWeb.Models.Receipt
@{
    ViewData["Title"] = "Receipt - " + Model.ReceiptNumber;
    var settings = (AdministratorWeb.Models.LaundrySettings?)ViewData["Settings"];
    var payment = Model.Payment;
    var request = payment.LaundryRequest;
    var isRefunded = payment.Status == AdministratorWeb.Models.PaymentStatus.Refunded;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            padding: 20px;
            background: #f5f5f5;
        }

        .receipt-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .header {
            text-align: center;
            border-bottom: 3px solid #333;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .business-name {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .business-info {
            font-size: 14px;
            color: #666;
            line-height: 1.6;
        }

        .receipt-number {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            margin: 20px 0;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 5px;
        }

        .refund-banner {
            text-align: center;
            background: #fff3cd;
            border: 2px solid #ffc107;
            padding: 15px;
            margin: 20px 0;
            border-radius: 5px;
        }

        .refund-banner.full-refund {
            background: #f8d7da;
            border-color: #dc3545;
        }

        .refund-banner h3 {
            color: #856404;
            margin-bottom: 10px;
            font-size: 18px;
        }

        .refund-banner.full-refund h3 {
            color: #721c24;
        }

        .section {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
            border-bottom: 2px solid #eee;
            padding-bottom: 5px;
        }

        .info-row {
            display: flex;
            padding: 8px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .info-label {
            flex: 0 0 150px;
            font-weight: 600;
            color: #666;
        }

        .info-value {
            flex: 1;
            color: #333;
        }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .items-table th {
            background: #f8f9fa;
            padding: 12px;
            text-align: left;
            font-weight: bold;
            border-bottom: 2px solid #dee2e6;
        }

        .items-table td {
            padding: 12px;
            border-bottom: 1px solid #f0f0f0;
        }

        .items-table tr:last-child td {
            border-bottom: 2px solid #dee2e6;
        }

        .totals {
            margin-top: 20px;
            text-align: right;
        }

        .total-row {
            padding: 8px 0;
            font-size: 16px;
        }

        .total-row.grand-total {
            font-size: 22px;
            font-weight: bold;
            color: #333;
            border-top: 3px solid #333;
            padding-top: 15px;
            margin-top: 10px;
        }

        .footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px solid #eee;
            color: #666;
            font-size: 14px;
        }

        .actions {
            text-align: center;
            margin: 30px 0;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 5px;
        }

        .btn {
            display: inline-block;
            padding: 12px 30px;
            margin: 0 10px;
            background: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }

        .btn:hover {
            background: #0056b3;
        }

        .btn-secondary {
            background: #6c757d;
        }

        .btn-secondary:hover {
            background: #5a6268;
        }

        /* Print styles */
        @@media print {
            body {
                background: white;
                padding: 0;
            }

            .receipt-container {
                box-shadow: none;
                max-width: 100%;
            }

            .actions {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="receipt-container">
        <!-- Header -->
        <div class="header">
            <div class="business-name">@(settings?.CompanyName ?? "Autonomous Laundry Service")</div>
            <div class="business-info">
                @(settings?.CompanyAddress ?? "")<br>
                Phone: @(settings?.CompanyPhone ?? "") | Email: @(settings?.CompanyEmail ?? "")
            </div>
        </div>

        <!-- Receipt Number -->
        <div class="receipt-number">
            OFFICIAL RECEIPT<br>
            #@Model.ReceiptNumber
        </div>

        <!-- Refund Banner (if refunded) -->
        @if (isRefunded)
        {
            var isFullRefund = payment.RefundAmount >= payment.Amount;
            <div class="refund-banner @(isFullRefund ? "full-refund" : "")">
                <h3>⚠️ @(isFullRefund ? "FULLY REFUNDED" : "PARTIALLY REFUNDED")</h3>
                <p style="margin: 5px 0;">
                    <strong>Refund Amount:</strong> ₱@payment.RefundAmount?.ToString("N2")<br>
                    <strong>Refund Date:</strong> @payment.RefundedAt?.ToString("MMMM dd, yyyy")<br>
                    <strong>Reason:</strong> @payment.RefundReason
                </p>
            </div>
        }

        <!-- Date and Transaction -->
        <div class="section">
            <div class="info-row">
                <div class="info-label">Date Issued:</div>
                <div class="info-value">@Model.GeneratedAt.ToString("MMMM dd, yyyy hh:mm tt")</div>
            </div>
            <div class="info-row">
                <div class="info-label">Transaction ID:</div>
                <div class="info-value">@payment.TransactionId</div>
            </div>
        </div>

        <!-- Customer Information -->
        <div class="section">
            <div class="section-title">Customer Information</div>
            <div class="info-row">
                <div class="info-label">Name:</div>
                <div class="info-value">@payment.CustomerName</div>
            </div>
            <div class="info-row">
                <div class="info-label">Phone:</div>
                <div class="info-value">@request.CustomerPhone</div>
            </div>
            <div class="info-row">
                <div class="info-label">Address:</div>
                <div class="info-value">@request.Address</div>
            </div>
        </div>

        <!-- Service Details -->
        <div class="section">
            <div class="section-title">Service Details</div>

            <table class="items-table">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th style="text-align: right;">Weight</th>
                        <th style="text-align: right;">Rate/kg</th>
                        <th style="text-align: right;">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <strong>Laundry Service</strong><br>
                            <small>Request #@request.Id</small><br>
                            <small>Date: @request.RequestedAt.ToString("MMM dd, yyyy")</small>
                        </td>
                        <td style="text-align: right;">@request.Weight?.ToString("F2") kg</td>
                        <td style="text-align: right;">₱@request.PricePerKg.ToString("F2")</td>
                        <td style="text-align: right;">₱@payment.Amount.ToString("F2")</td>
                    </tr>
                </tbody>
            </table>

            <div class="totals">
                <div class="total-row">
                    <strong>Original Amount:</strong> ₱@payment.Amount.ToString("F2")
                </div>
                @if (request.MinimumCharge > 0 && payment.Amount == request.MinimumCharge)
                {
                    <div class="total-row">
                        <small style="color: #666;">(Minimum charge applied)</small>
                    </div>
                }
                @if (isRefunded)
                {
                    <div class="total-row" style="color: #dc3545;">
                        <strong>Less Refund:</strong> -₱@payment.RefundAmount?.ToString("F2")
                    </div>
                    <div class="total-row grand-total">
                        <strong>NET AMOUNT:</strong> ₱@((payment.Amount - (payment.RefundAmount ?? 0)).ToString("F2"))
                    </div>
                }
                else
                {
                    <div class="total-row grand-total">
                        <strong>TOTAL PAID:</strong> ₱@payment.Amount.ToString("F2")
                    </div>
                }
            </div>
        </div>

        <!-- Payment Information -->
        <div class="section">
            <div class="section-title">Payment Information</div>
            <div class="info-row">
                <div class="info-label">Payment Method:</div>
                <div class="info-value">@payment.Method</div>
            </div>
            <div class="info-row">
                <div class="info-label">Payment Status:</div>
                <div class="info-value">
                    <strong style="color: @(isRefunded ? "#dc3545" : "#28a745");">@payment.Status</strong>
                </div>
            </div>
            <div class="info-row">
                <div class="info-label">Payment Date:</div>
                <div class="info-value">@payment.ProcessedAt?.ToString("MMMM dd, yyyy hh:mm tt")</div>
            </div>
            @if (!string.IsNullOrEmpty(payment.PaymentReference))
            {
                <div class="info-row">
                    <div class="info-label">Reference:</div>
                    <div class="info-value">@payment.PaymentReference</div>
                </div>
            }
            @if (!string.IsNullOrEmpty(payment.Notes))
            {
                <div class="info-row">
                    <div class="info-label">Notes:</div>
                    <div class="info-value">@payment.Notes</div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="footer">
            <p>Thank you for your business!</p>
            <p style="margin-top: 10px; font-size: 12px;">
                This is an official receipt generated by the Autonomous Laundry System.<br>
                For inquiries, please contact us at @(settings?.CompanyEmail ?? "")
            </p>
        </div>
    </div>

    <!-- Action Buttons (hidden when printing) -->
    <div class="actions">
        <button onclick="window.print()" class="btn">
            Print Receipt
        </button>

        @if (!Model.SentToCustomer)
        {
            <form asp-action="ResendReceipt" asp-route-receiptId="@Model.Id"
                  method="post" style="display: inline;">
                <button type="submit" class="btn">
                    Send to Customer
                </button>
            </form>
        }

        <a href="@Url.Action("Payments")" class="btn btn-secondary">
            Back to Payments
        </a>
    </div>
</body>
</html>
