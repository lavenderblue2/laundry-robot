@model AdministratorWeb.Models.Receipt
@{
    Layout = null;
    var settings = (AdministratorWeb.Models.LaundrySettings?)ViewData["Settings"];
    var payment = Model.Payment;
    var request = payment.LaundryRequest;
    var isRefunded = payment.Status == AdministratorWeb.Models.PaymentStatus.Refunded;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Receipt - @Model.ReceiptNumber</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 11pt;
            line-height: 1.4;
            color: #000;
            background: white;
            padding: 20px;
        }

        .receipt-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            border-bottom: 3px solid #333;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .business-name {
            font-size: 24pt;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .business-info {
            font-size: 10pt;
            color: #666;
            line-height: 1.6;
        }

        .receipt-number {
            text-align: center;
            font-size: 18pt;
            font-weight: bold;
            margin: 20px 0;
            padding: 10px;
            background: #f8f9fa;
        }

        .refund-banner {
            text-align: center;
            background: #fff3cd;
            border: 2px solid #ffc107;
            padding: 15px;
            margin: 20px 0;
        }

        .refund-banner.full-refund {
            background: #f8d7da;
            border-color: #dc3545;
        }

        .refund-banner h3 {
            color: #856404;
            margin-bottom: 10px;
            font-size: 14pt;
        }

        .refund-banner.full-refund h3 {
            color: #721c24;
        }

        .section {
            margin-bottom: 25px;
        }

        .section-title {
            font-size: 12pt;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
            border-bottom: 2px solid #eee;
            padding-bottom: 5px;
        }

        .info-table {
            width: 100%;
            border-collapse: collapse;
        }

        .info-table td {
            padding: 5px 0;
            vertical-align: top;
        }

        .info-table td:first-child {
            width: 150px;
            font-weight: 600;
            color: #666;
        }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin: 15px 0;
        }

        .items-table th {
            background: #f8f9fa;
            padding: 10px;
            text-align: left;
            font-weight: bold;
            border-bottom: 2px solid #dee2e6;
        }

        .items-table td {
            padding: 10px;
            border-bottom: 1px solid #f0f0f0;
        }

        .items-table tr:last-child td {
            border-bottom: 2px solid #dee2e6;
        }

        .totals {
            margin-top: 20px;
            text-align: right;
        }

        .total-row {
            padding: 5px 0;
            font-size: 11pt;
        }

        .total-row.grand-total {
            font-size: 16pt;
            font-weight: bold;
            border-top: 3px solid #333;
            padding-top: 10px;
            margin-top: 10px;
        }

        .footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px solid #eee;
            color: #666;
            font-size: 10pt;
        }

        @@media print {
            body {
                padding: 0;
            }

            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="receipt-container">
        <!-- Header -->
        <div class="header">
            <div class="business-name">@(settings?.CompanyName ?? "Autonomous Laundry Service")</div>
            <div class="business-info">
                @(settings?.CompanyAddress ?? "")<br>
                Phone: @(settings?.CompanyPhone ?? "") | Email: @(settings?.CompanyEmail ?? "")
            </div>
        </div>

        <!-- Receipt Number -->
        <div class="receipt-number">
            OFFICIAL RECEIPT<br>
            #@Model.ReceiptNumber
        </div>

        <!-- Refund Banner (if refunded) -->
        @if (isRefunded)
        {
            var isFullRefund = payment.RefundAmount >= payment.Amount;
            <div class="refund-banner @(isFullRefund ? "full-refund" : "")">
                <h3>‚ö†Ô∏è @(isFullRefund ? "FULLY REFUNDED" : "PARTIALLY REFUNDED")</h3>
                <p style="margin: 5px 0;">
                    <strong>Refund Amount:</strong> ‚Ç±@payment.RefundAmount?.ToString("N2")<br>
                    <strong>Refund Date:</strong> @payment.RefundedAt?.ToString("MMMM dd, yyyy")<br>
                    <strong>Reason:</strong> @payment.RefundReason
                </p>
            </div>
        }

        <!-- Date and Transaction -->
        <div class="section">
            <table class="info-table">
                <tr>
                    <td>Date Issued:</td>
                    <td>@Model.GeneratedAt.ToString("MMMM dd, yyyy hh:mm tt")</td>
                </tr>
                <tr>
                    <td>Transaction ID:</td>
                    <td>@payment.TransactionId</td>
                </tr>
            </table>
        </div>

        <!-- Customer Information -->
        <div class="section">
            <div class="section-title">Customer Information</div>
            <table class="info-table">
                <tr>
                    <td>Name:</td>
                    <td>@payment.CustomerName</td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>@request.CustomerPhone</td>
                </tr>
                <tr>
                    <td>Address:</td>
                    <td>@request.Address</td>
                </tr>
            </table>
        </div>

        <!-- Service Details -->
        <div class="section">
            <div class="section-title">Service Details</div>

            <table class="items-table">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th style="text-align: right;">Weight</th>
                        <th style="text-align: right;">Rate/kg</th>
                        <th style="text-align: right;">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <strong>Laundry Service</strong><br>
                            <small>Request #@request.Id</small><br>
                            <small>Date: @request.RequestedAt.ToString("MMM dd, yyyy")</small>
                        </td>
                        <td style="text-align: right;">@request.Weight?.ToString("F2") kg</td>
                        <td style="text-align: right;">‚Ç±@request.PricePerKg.ToString("F2")</td>
                        <td style="text-align: right;">‚Ç±@payment.Amount.ToString("F2")</td>
                    </tr>
                </tbody>
            </table>

            <div class="totals">
                <div class="total-row">
                    <strong>Original Amount:</strong> ‚Ç±@payment.Amount.ToString("F2")
                </div>
                @if (request.MinimumCharge > 0 && payment.Amount == request.MinimumCharge)
                {
                    <div class="total-row">
                        <small style="color: #666;">(Minimum charge applied)</small>
                    </div>
                }
                @if (isRefunded)
                {
                    <div class="total-row" style="color: #dc3545;">
                        <strong>Less Refund:</strong> -‚Ç±@payment.RefundAmount?.ToString("F2")
                    </div>
                    <div class="total-row grand-total">
                        <strong>NET AMOUNT:</strong> ‚Ç±@((payment.Amount - (payment.RefundAmount ?? 0)).ToString("F2"))
                    </div>
                }
                else
                {
                    <div class="total-row grand-total">
                        <strong>TOTAL PAID:</strong> ‚Ç±@payment.Amount.ToString("F2")
                    </div>
                }
            </div>
        </div>

        <!-- Payment Information -->
        <div class="section">
            <div class="section-title">Payment Information</div>
            <table class="info-table">
                <tr>
                    <td>Payment Method:</td>
                    <td>@payment.Method</td>
                </tr>
                <tr>
                    <td>Payment Status:</td>
                    <td><strong style="color: @(isRefunded ? "#dc3545" : "#28a745");">@payment.Status</strong></td>
                </tr>
                <tr>
                    <td>Payment Date:</td>
                    <td>@payment.ProcessedAt?.ToString("MMMM dd, yyyy hh:mm tt")</td>
                </tr>
                @if (!string.IsNullOrEmpty(payment.PaymentReference))
                {
                    <tr>
                        <td>Reference:</td>
                        <td>@payment.PaymentReference</td>
                    </tr>
                }
                @if (!string.IsNullOrEmpty(payment.Notes))
                {
                    <tr>
                        <td>Notes:</td>
                        <td>@payment.Notes</td>
                    </tr>
                }
            </table>
        </div>

        <!-- Footer -->
        <div class="footer">
            <p>Thank you for your business!</p>
            <p style="margin-top: 10px;">
                This is an official receipt generated by the Autonomous Laundry System.<br>
                For inquiries, please contact us at @(settings?.CompanyEmail ?? "")
            </p>
        </div>
    </div>

    <!-- Print button for screen view -->
    <div class="no-print" style="text-align: center; margin-top: 30px;">
        <button onclick="window.print()" style="padding: 12px 30px; background: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 14pt;">
            üñ®Ô∏è Print Receipt
        </button>
    </div>
</body>
</html>
