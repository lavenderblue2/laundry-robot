@model IEnumerable<AdministratorWeb.Models.Payment>
@using AdministratorWeb.Models.DTOs
@{
    var customerProfileData = (CustomerProfileDto)ViewData["CustomerProfileData"]!;
    ViewData["Title"] = $"Customer Profile - {customerProfileData.CustomerName}";
}

<div class="mb-8">
    <h1 class="text-2xl font-bold text-white">Customer Profile</h1>
    <p class="text-gray-400">@customerProfileData.CustomerName (ID: @customerProfileData.CustomerId)</p>
</div>
  
<!-- Customer Summary Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i data-lucide="dollar-sign" class="h-6 w-6 text-green-400"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-400 truncate">Total Spent</dt>
                        <dd class="text-lg font-medium text-white">$@customerProfileData.TotalSpent.ToString("N2")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i data-lucide="package" class="h-6 w-6 text-blue-400"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-400 truncate">Total Requests</dt>
                        <dd class="text-lg font-medium text-white">@customerProfileData.TotalRequests</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i data-lucide="check-circle" class="h-6 w-6 text-purple-400"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-400 truncate">Completed</dt>
                        <dd class="text-lg font-medium text-white">@customerProfileData.CompletedRequests</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-700">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i data-lucide="alert-circle" class="h-6 w-6 text-yellow-400"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-400 truncate">Outstanding</dt>
                        <dd class="text-lg font-medium text-white">$@customerProfileData.OutstandingAmount.ToString("N2")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabs -->
<div class="mb-6">
    <nav class="flex space-x-8">
        <button onclick="showTab('payments')" id="paymentsTab" class="tab-button active text-blue-400 border-b-2 border-blue-400 py-2 px-1 font-medium text-sm">
            Payment History
        </button>
        <button onclick="showTab('requests')" id="requestsTab" class="tab-button text-gray-400 hover:text-gray-300 py-2 px-1 font-medium text-sm">
            Request History
        </button>
    </nav>
</div>

<!-- Payment History Tab -->
<div id="paymentsContent" class="tab-content">
    <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-white">Payment History</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-400">All payment transactions for this customer</p>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Transaction</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Method</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Request</th>
                    </tr>
                </thead>
                <tbody class="bg-gray-800 divide-y divide-gray-700">
                    @foreach (var payment in Model)
                    {
                        <tr class="hover:bg-gray-700">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-white">@payment.TransactionId</div>
                                @if (!string.IsNullOrEmpty(payment.PaymentReference))
                                {
                                    <div class="text-xs text-gray-400">Ref: @payment.PaymentReference</div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                                $@payment.Amount.ToString("N2")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                @payment.Method
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    @(payment.Status == AdministratorWeb.Models.PaymentStatus.Completed ? "bg-green-900 text-green-200 border border-green-700" :
                                      payment.Status == AdministratorWeb.Models.PaymentStatus.Pending ? "bg-yellow-900 text-yellow-200 border border-yellow-700" :
                                      payment.Status == AdministratorWeb.Models.PaymentStatus.Failed ? "bg-red-900 text-red-200 border border-red-700" :
                                      "bg-gray-700 text-gray-300 border border-gray-600")">
                                    @payment.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                                @payment.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                                Request #@payment.LaundryRequestId
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="px-4 py-8 text-center text-gray-400">
                <i data-lucide="credit-card" class="mx-auto h-12 w-12 text-gray-600"></i>
                <h3 class="mt-2 text-sm font-medium text-white">No payments yet</h3>
                <p class="mt-1 text-sm text-gray-400">This customer hasn't made any payments.</p>
            </div>
        }
    </div>
</div>

<!-- Request History Tab -->
<div id="requestsContent" class="tab-content hidden">
    <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-white">Request History</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-400">All laundry requests for this customer</p>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Request</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Weight</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Cost</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Payment</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
                    </tr>
                </thead>
                <tbody class="bg-gray-800 divide-y divide-gray-700">
                    @foreach (var request in customerProfileData.Requests)
                    {
                        <tr class="hover:bg-gray-700">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-white">#@request.Id</div>
                                @if (!string.IsNullOrEmpty(request.AssignedRobotName))
                                {
                                    <div class="text-xs text-gray-400">@request.AssignedRobotName</div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                @request.Type
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    @(request.Status == AdministratorWeb.Models.RequestStatus.Pending ? "bg-yellow-900 text-yellow-200 border border-yellow-700" :
                                      request.Status == AdministratorWeb.Models.RequestStatus.Accepted ? "bg-blue-900 text-blue-200 border border-blue-700" :
                                      request.Status == AdministratorWeb.Models.RequestStatus.InProgress ? "bg-purple-900 text-purple-200 border border-purple-700" :
                                      request.Status == AdministratorWeb.Models.RequestStatus.Completed ? "bg-green-900 text-green-200 border border-green-700" :
                                      "bg-red-900 text-red-200 border border-red-700")">
                                    @request.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                @(request.Weight?.ToString("N1") ?? "N/A") kg
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                @(request.TotalCost?.ToString("C") ?? "N/A")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(request.IsPaid ? "bg-green-900 text-green-200 border border-green-700" : "bg-red-900 text-red-200 border border-red-700")">
                                    @(request.IsPaid ? "Paid" : "Unpaid")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                                @request.RequestedAt.ToString("MMM dd, yyyy")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function showTab(tabName) {
        // Hide all tab contents
        document.querySelectorAll('.tab-content').forEach(content => {
            content.classList.add('hidden');
        });
        
        // Remove active class from all tab buttons
        document.querySelectorAll('.tab-button').forEach(button => {
            button.classList.remove('active', 'text-blue-400', 'border-b-2', 'border-blue-400');
            button.classList.add('text-gray-400', 'hover:text-gray-300');
        });
        
        // Show selected tab content
        document.getElementById(tabName + 'Content').classList.remove('hidden');
        
        // Add active class to selected tab button
        const activeTab = document.getElementById(tabName + 'Tab');
        activeTab.classList.remove('text-gray-400', 'hover:text-gray-300');
        activeTab.classList.add('active', 'text-blue-400', 'border-b-2', 'border-blue-400');
    }
</script>