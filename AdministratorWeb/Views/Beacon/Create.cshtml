@model AdministratorWeb.Models.BluetoothBeacon
@using AdministratorWeb.Models.DTOs
@{
    ViewData["Title"] = "Add New Beacon";
    var createData = (BeaconCreateDto)ViewData["BeaconCreateData"]!;
}

<!-- Dashboard Header -->
<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Add New Beacon</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="radio" class="w-4 h-4 mr-2"></i>
                Configure a new Bluetooth beacon for room tracking
            </p>
        </div>
        <div class="flex items-center space-x-3">
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-xl transition-all duration-200">
                <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
                Back to Beacons
            </a>
        </div>
    </div>
</div>

<!-- Create Form -->
<div class="max-w-4xl mx-auto bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.1s;">
    <div class="px-8 py-8">
        <form asp-action="Create" method="post" class="space-y-8">
            <div asp-validation-summary="ModelOnly" class="text-red-400 bg-red-900/20 border border-red-700/50 rounded-xl p-4"></div>
            
            <!-- Basic Information -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-brand-500/20 rounded-xl mr-3">
                        <i data-lucide="info" class="h-5 w-5 text-brand-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Basic Information</h3>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Name" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                            <i data-lucide="tag" class="w-4 h-4 mr-2 text-slate-400"></i>
                            Beacon Name
                        </label>
                        <input asp-for="Name" placeholder="e.g., Living Room Beacon" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                        <span asp-validation-for="Name" class="text-red-400 text-sm mt-1 flex items-center">
                                                    </span>
                    </div>
                    
                    <div>
                        <label asp-for="RoomName" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                            <i data-lucide="home" class="w-4 h-4 mr-2 text-slate-400"></i>
                            Room Name
                        </label>
                        <select asp-for="RoomName" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200">
                            <option value="">Select Room</option>
                            @foreach (var room in createData.AvailableRooms)
                            {
                                <option value="@room.Name">@room.DisplayName</option>
                            }
                        </select>
                        <span asp-validation-for="RoomName" class="text-red-400 text-sm mt-1 flex items-center">
                                                    </span>
                    </div>
                </div>
            </div>

            <!-- Technical Configuration -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-purple-500/20 rounded-xl mr-3">
                        <i data-lucide="settings" class="h-5 w-5 text-purple-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Technical Configuration</h3>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label asp-for="MacAddress" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                            <i data-lucide="wifi" class="w-4 h-4 mr-2 text-slate-400"></i>
                            MAC Address
                        </label>
                        <input asp-for="MacAddress" placeholder="e.g., DE:AD:BE:EF:CA:FE" maxlength="17" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200 font-mono" />
                        <p class="text-xs text-slate-400 mt-2 flex items-center">
                            <i data-lucide="info" class="w-3 h-3 mr-1"></i>
                            Format: XX:XX:XX:XX:XX:XX (will be automatically converted to uppercase)
                        </p>
                        <span asp-validation-for="MacAddress" class="text-red-400 text-sm mt-1 flex items-center">
                                                    </span>
                    </div>
                    
                    <div>
                        <label asp-for="RssiThreshold" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                            <i data-lucide="signal" class="w-4 h-4 mr-2 text-slate-400"></i>
                            RSSI Threshold (dBm)
                        </label>
                        <input asp-for="RssiThreshold" type="number" min="-100" max="0" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                        <p class="text-xs text-slate-400 mt-2 flex items-center">
                            <i data-lucide="info" class="w-3 h-3 mr-1"></i>
                            Signal strength required to be "in range" (-10 = very close, -50 = far away)
                        </p>
                        <span asp-validation-for="RssiThreshold" class="text-red-400 text-sm mt-1 flex items-center">
                                                    </span>
                    </div>
                    
                    <div>
                        <label asp-for="Priority" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                            <i data-lucide="flag" class="w-4 h-4 mr-2 text-slate-400"></i>
                            Navigation Priority
                        </label>
                        <input asp-for="Priority" type="number" min="1" max="10" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                        <p class="text-xs text-slate-400 mt-2 flex items-center">
                            <i data-lucide="info" class="w-3 h-3 mr-1"></i>
                            Priority for navigation (1-10, higher = more important)
                        </p>
                        <span asp-validation-for="Priority" class="text-red-400 text-sm mt-1 flex items-center">
                                                    </span>
                    </div>
                </div>
            </div>

            <!-- Behavior Settings -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-emerald-500/20 rounded-xl mr-3">
                        <i data-lucide="toggle-right" class="h-5 w-5 text-emerald-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Behavior Settings</h3>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" class="w-4 h-4 text-brand-600 bg-slate-600 border-slate-500 rounded focus:ring-brand-500 focus:ring-2" />
                        <label asp-for="IsActive" class="ml-3 text-slate-300 text-sm font-medium flex items-center">
                            <i data-lucide="check-circle" class="w-4 h-4 mr-2 text-slate-400"></i>
                            Active (robots will track this beacon)
                        </label>
                    </div>
                    
                    <div class="flex items-center">
                        <input asp-for="IsNavigationTarget" type="checkbox" class="w-4 h-4 text-brand-600 bg-slate-600 border-slate-500 rounded focus:ring-brand-500 focus:ring-2" />
                        <label asp-for="IsNavigationTarget" class="ml-3 text-slate-300 text-sm font-medium flex items-center">
                            <i data-lucide="navigation" class="w-4 h-4 mr-2 text-slate-400"></i>
                            Navigation Target (robots can navigate to this beacon)
                        </label>
                    </div>
                </div>
            </div>

            <!-- Optional Description -->
            <div class="bg-slate-700/30 rounded-2xl p-6 border border-slate-600/50">
                <div class="flex items-center mb-6">
                    <div class="p-2 bg-orange-500/20 rounded-xl mr-3">
                        <i data-lucide="file-text" class="h-5 w-5 text-orange-400"></i>
                    </div>
                    <h3 class="text-xl font-bold text-white">Additional Information</h3>
                </div>
                <div>
                    <label asp-for="Description" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                        <i data-lucide="message-square" class="w-4 h-4 mr-2 text-slate-400"></i>
                        Description (Optional)
                    </label>
                    <textarea asp-for="Description" rows="4" placeholder="Optional notes or description about this beacon..." class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent resize-none transition-all duration-200"></textarea>
                    <span asp-validation-for="Description" class="text-red-400 text-sm mt-1 flex items-center">
                                            </span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-700/50">
                <div class="text-sm text-slate-400 flex items-center">
                    <i data-lucide="info" class="w-4 h-4 mr-2"></i>
                    The beacon will be available to robots immediately after creation
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Index" class="inline-flex items-center px-6 py-3 bg-slate-600/50 hover:bg-slate-600 text-white font-medium rounded-xl transition-all duration-200">
                        <i data-lucide="x" class="w-4 h-4 mr-2"></i>
                        Cancel
                    </a>
                    <button type="submit" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i data-lucide="plus" class="w-4 h-4 mr-2"></i>
                        Create Beacon
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Initialize lucide icons when page loads
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
        
        // Format MAC address as user types
        document.querySelector('input[name="MacAddress"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9A-Fa-f]/g, '');
            let formatted = value.match(/.{1,2}/g)?.join(':') || value;
            if (formatted.length <= 17) {
                e.target.value = formatted.toUpperCase();
            }
        });
    </script>
}