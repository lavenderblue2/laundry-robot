@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Privacy Policy Page -->
<div class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16 animate-slide-up">
            <div class="inline-flex items-center px-4 py-2 bg-brand-100 text-brand-700 rounded-full text-sm font-medium mb-6">
                <i data-lucide="shield-check" class="w-4 h-4 mr-2"></i>
                Privacy & Security
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">Privacy Policy</h1>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto">
                Your privacy is important to us. Learn how we collect, use, and protect your information.
            </p>
            <p class="text-sm text-slate-500 mt-4">Last updated: January 2025</p>
        </div>

        <!-- Content -->
        <div class="bg-white rounded-3xl p-8 md:p-12 shadow-xl border border-slate-200/50 animate-slide-up" style="animation-delay: 0.1s;">
            <div class="prose prose-slate max-w-none">
                <!-- Information We Collect -->
                <div class="mb-10">
                    <div class="flex items-center mb-4">
                        <div class="w-10 h-10 bg-brand-100 rounded-xl flex items-center justify-center mr-4">
                            <i data-lucide="database" class="w-5 h-5 text-brand-600"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-slate-900">Information We Collect</h2>
                    </div>
                    <div class="ml-14 space-y-4 text-slate-600">
                        <p><strong>Personal Information:</strong> When you create an account or request our services, we may collect your name, email address, phone number, and address.</p>
                        <p><strong>Service Information:</strong> Details about your laundry requests, preferences, and service history to provide better service.</p>
                        <p><strong>Technical Information:</strong> Device information, IP address, and usage patterns to improve our platform security and functionality.</p>
                    </div>
                </div>

                <!-- How We Use Information -->
                <div class="mb-10">
                    <div class="flex items-center mb-4">
                        <div class="w-10 h-10 bg-indigo-100 rounded-xl flex items-center justify-center mr-4">
                            <i data-lucide="settings" class="w-5 h-5 text-indigo-600"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-slate-900">How We Use Your Information</h2>
                    </div>
                    <div class="ml-14 space-y-4 text-slate-600">
                        <p><strong>Service Delivery:</strong> To process your laundry requests, dispatch robots, and manage pickups and deliveries.</p>
                        <p><strong>Communication:</strong> To send service updates, notifications, and respond to your inquiries.</p>
                        <p><strong>Improvement:</strong> To analyze usage patterns and enhance our autonomous laundry service platform.</p>
                        <p><strong>Security:</strong> To protect against fraud, ensure platform security, and maintain service reliability.</p>
                    </div>
                </div>

                <!-- Data Protection -->
                <div class="mb-10">
                    <div class="flex items-center mb-4">
                        <div class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center mr-4">
                            <i data-lucide="shield" class="w-5 h-5 text-emerald-600"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-slate-900">Data Protection</h2>
                    </div>
                    <div class="ml-14 space-y-4 text-slate-600">
                        <p>We implement industry-standard security measures including encryption, secure data storage, and regular security audits to protect your information.</p>
                        <p>Access to personal information is restricted to authorized personnel who need it to provide services or support.</p>
                        <p>We do not sell, trade, or rent your personal information to third parties for marketing purposes.</p>
                    </div>
                </div>

                <!-- Your Rights -->
                <div class="mb-10">
                    <div class="flex items-center mb-4">
                        <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
                            <i data-lucide="user-check" class="w-5 h-5 text-purple-600"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-slate-900">Your Rights</h2>
                    </div>
                    <div class="ml-14 space-y-4 text-slate-600">
                        <p><strong>Access:</strong> Request a copy of the personal information we hold about you.</p>
                        <p><strong>Correction:</strong> Update or correct your personal information at any time.</p>
                        <p><strong>Deletion:</strong> Request deletion of your account and associated personal data.</p>
                        <p><strong>Portability:</strong> Export your data in a commonly used format.</p>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="bg-slate-50 rounded-2xl p-6 border border-slate-200">
                    <div class="flex items-center mb-4">
                        <div class="w-10 h-10 bg-slate-200 rounded-xl flex items-center justify-center mr-4">
                            <i data-lucide="mail" class="w-5 h-5 text-slate-600"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-slate-900">Contact Us</h2>
                    </div>
                    <div class="ml-14 text-slate-600">
                        <p class="mb-2">If you have questions about this Privacy Policy or how we handle your data, please contact us:</p>
                        <div class="flex flex-col space-y-2">
                            <a href="mailto:privacy@jopart.com" class="text-brand-600 hover:text-brand-700 font-medium">privacy@jopart.com</a>
                            <span>Jopart Autonomous Laundry</span>
                            <span>Privacy Department</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>