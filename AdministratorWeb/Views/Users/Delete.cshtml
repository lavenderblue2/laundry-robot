@model AdministratorWeb.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete User";
}

<div class="mb-8">
    <h1 class="text-2xl font-bold text-white">Delete User</h1>
    <p class="text-gray-400">Are you sure you want to delete this user?</p>
</div>

<div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
    <div class="px-6 py-8">
        <div class="bg-red-900 border border-red-700 rounded-md p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i data-lucide="alert-triangle" class="h-5 w-5 text-red-400"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-200">
                        Warning: This action cannot be undone
                    </h3>
                    <div class="mt-2 text-sm text-red-300">
                        <p>Deleting this user will permanently remove their account and all associated data.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-1">First Name</label>
                    <div class="px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white">
                        @Model.FirstName
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-1">Last Name</label>
                    <div class="px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white">
                        @Model.LastName
                    </div>
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-1">Email</label>
                <div class="px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white">
                    @Model.Email
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-1">Status</label>
                <div class="px-3 py-2">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(Model.IsActive ? "bg-green-900 text-green-200 border border-green-700" : "bg-red-900 text-red-200 border border-red-700")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-1">Created At</label>
                <div class="px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white">
                    @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                </div>
            </div>
        </div>
        
        <div class="flex space-x-4 pt-8">
            <form asp-action="Delete" method="post" class="inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-md text-sm font-medium">
                    <i data-lucide="trash-2" class="w-4 h-4 inline mr-2"></i>
                    Delete User
                </button>
            </form>
            <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-md text-sm font-medium inline-flex items-center">
                <i data-lucide="arrow-left" class="w-4 h-4 inline mr-2"></i>
                Back to Users
            </a>
        </div>
    </div>
</div>