@model IEnumerable<AdministratorWeb.Models.LaundryRequest>
@{
    ViewData["Title"] = "Manage Requests";
}

<div class="mb-8">
    <h1 class="text-2xl font-bold text-white">Manage Requests</h1>
    <p class="text-gray-400">Review and manage customer laundry requests</p>
</div>

<div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Customer</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Robot</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Weight</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Cost</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Payment</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-gray-800 divide-y divide-gray-700">
                @foreach (var request in Model)
                {
                    <tr class="hover:bg-gray-700">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-white">@request.CustomerName</div>
                            <div class="text-sm text-gray-400">@request.CustomerPhone</div>
                            <div class="text-sm text-gray-400">@request.Address</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@request.Type</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                @(request.Status == AdministratorWeb.Models.RequestStatus.Pending ? "bg-yellow-900 text-yellow-200 border border-yellow-700" :
                                  request.Status == AdministratorWeb.Models.RequestStatus.Accepted ? "bg-blue-900 text-blue-200 border border-blue-700" :
                                  request.Status == AdministratorWeb.Models.RequestStatus.InProgress ? "bg-purple-900 text-purple-200 border border-purple-700" :
                                  request.Status == AdministratorWeb.Models.RequestStatus.Completed ? "bg-green-900 text-green-200 border border-green-700" :
                                  "bg-red-900 text-red-200 border border-red-700")">
                                @request.Status
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                            @(request.AssignedRobotName ?? "Not Assigned")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                            @(request.Weight?.ToString("N2") ?? "N/A") kg
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                            @(request.TotalCost?.ToString("C") ?? "N/A")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(request.IsPaid ? "bg-green-900 text-green-200 border border-green-700" : "bg-red-900 text-red-200 border border-red-700")">
                                @(request.IsPaid ? "Paid" : "Unpaid")
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                            @request.RequestedAt.ToString("MMM dd, yyyy HH:mm")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            @if (request.Status == AdministratorWeb.Models.RequestStatus.Pending)
                            {
                                <div class="flex space-x-2">
                                    <form asp-action="AcceptRequest" method="post" class="inline">
                                        <input type="hidden" name="id" value="@request.Id" />
                                        <button type="submit" class="text-green-400 hover:text-green-300">Accept</button>
                                    </form>
                                    <button onclick="openDeclineModal(@request.Id)" class="text-red-400 hover:text-red-300">Decline</button>
                                </div>
                            }
                            else if (request.Status == AdministratorWeb.Models.RequestStatus.Accepted)
                            {
                                <button onclick="openAssignRobotModal(@request.Id)" class="text-blue-400 hover:text-blue-300">Assign Robot</button>
                            }
                            else
                            {
                                <span class="text-gray-500">-</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Decline Request Modal -->
<div id="declineModal" class="fixed inset-0 bg-gray-900 bg-opacity-75 overflow-y-auto h-full w-full hidden">
    <div class="relative top-20 mx-auto p-5 border border-gray-600 w-96 shadow-lg rounded-md bg-gray-800">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-white mb-4">Decline Request</h3>
            <form id="declineForm" asp-action="DeclineRequest" method="post">
                <input type="hidden" id="declineRequestId" name="id" />
                <div class="mb-4">
                    <label class="block text-gray-300 text-sm font-bold mb-2">Reason for decline:</label>
                    <textarea name="reason" rows="3" required class="bg-gray-700 border border-gray-600 rounded w-full py-2 px-3 text-white leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                </div>
                <div class="flex justify-end space-x-2">
                    <button type="button" onclick="closeDeclineModal()" class="bg-gray-600 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded">
                        Cancel
                    </button>
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                        Decline
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Assign Robot Modal -->
<div id="assignRobotModal" class="fixed inset-0 bg-gray-900 bg-opacity-75 overflow-y-auto h-full w-full hidden">
    <div class="relative top-20 mx-auto p-5 border border-gray-600 w-96 shadow-lg rounded-md bg-gray-800">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-white mb-4">Assign Robot</h3>
            <form id="assignRobotForm" asp-action="AssignRobot" method="post">
                <input type="hidden" id="assignRequestId" name="requestId" />
                <div class="mb-4">
                    <label class="block text-gray-300 text-sm font-bold mb-2">Select Robot:</label>
                    <select name="robotId" required class="bg-gray-700 border border-gray-600 rounded w-full py-2 px-3 text-white leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Choose a robot...</option>
                    </select>
                </div>
                <div class="flex justify-end space-x-2">
                    <button type="button" onclick="closeAssignRobotModal()" class="bg-gray-600 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded">
                        Cancel
                    </button>
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Assign
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openDeclineModal(requestId) {
        document.getElementById('declineRequestId').value = requestId;
        document.getElementById('declineModal').classList.remove('hidden');
    }
    
    function closeDeclineModal() {
        document.getElementById('declineModal').classList.add('hidden');
    }
    
    function openAssignRobotModal(requestId) {
        document.getElementById('assignRequestId').value = requestId;
        document.getElementById('assignRobotModal').classList.remove('hidden');
    }
    
    function closeAssignRobotModal() {
        document.getElementById('assignRobotModal').classList.add('hidden');
    }
</script>