@page
@using AdministratorWeb.Areas.Identity.Pages.Account.Manage
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
}

<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Email Settings</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="mail" class="w-4 h-4 mr-2"></i>
                Manage your email address
            </p>
        </div>
    </div>
</div>

<!-- Navigation -->
<partial name="_ManageNav" />

<!-- Email Management Form -->
<div class="max-w-2xl mx-auto bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.1s;">
    <div class="px-8 py-8">
        <!-- Success/Error Messages -->
        @if (Model.StatusMessage != null)
        {
            <div class="mb-6 animate-slide-down">
                <div class="bg-emerald-900/50 border border-emerald-700/50 text-emerald-200 px-4 py-3 rounded-xl backdrop-blur-sm" role="alert">
                    <div class="flex items-center">
                        <i data-lucide="check-circle" class="w-5 h-5 mr-2 text-emerald-400"></i>
                        <span>@Model.StatusMessage</span>
                    </div>
                </div>
            </div>
        }

        <form id="email-form" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-900/50 border border-red-700/50 rounded-xl text-red-200 text-sm" role="alert"></div>

            <!-- Current Email (read-only) -->
            <div>
                <label asp-for="Email" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                    <i data-lucide="mail" class="w-4 h-4 mr-2 text-slate-400"></i>
                    Current Email
                </label>
                <input asp-for="Email" disabled class="w-full px-4 py-3 bg-slate-600/30 border border-slate-500/50 rounded-xl text-slate-400 cursor-not-allowed transition-all duration-200" />
                @if (Model.IsEmailConfirmed)
                {
                    <div class="mt-2 flex items-center text-sm text-emerald-400">
                        <i data-lucide="check-circle" class="w-4 h-4 mr-1"></i>
                        Verified
                    </div>
                }
                else
                {
                    <div class="mt-2">
                        <button form="email-verification-form" type="submit" class="text-sm text-brand-400 hover:text-brand-300 flex items-center transition-colors">
                            <i data-lucide="send" class="w-3 h-3 mr-1"></i>
                            Send verification email
                        </button>
                    </div>
                }
            </div>

            <!-- New Email -->
            <div>
                <label asp-for="Input.NewEmail" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                    <i data-lucide="mail-plus" class="w-4 h-4 mr-2 text-slate-400"></i>
                    New Email Address
                </label>
                <input asp-for="Input.NewEmail" type="email" autocomplete="email" placeholder="Enter new email address" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                <span asp-validation-for="Input.NewEmail" class="text-red-400 text-sm mt-1 flex items-center"></span>
            </div>

            <!-- Save Button -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-700/50">
                <div class="text-sm text-slate-400 flex items-center">
                    <i data-lucide="info" class="w-4 h-4 mr-2"></i>
                    You'll need to verify the new email
                </div>
                <button type="submit" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
                    <i data-lucide="save" class="w-4 h-4 mr-2"></i>
                    Change Email
                </button>
            </div>
        </form>

        <form id="email-verification-form" asp-page-handler="SendVerificationEmail" method="post" class="hidden"></form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}
