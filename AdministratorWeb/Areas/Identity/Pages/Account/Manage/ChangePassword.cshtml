@page
@using AdministratorWeb.Areas.Identity.Pages.Account.Manage
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Change Password</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="lock" class="w-4 h-4 mr-2"></i>
                Update your account password
            </p>
        </div>
    </div>
</div>

<!-- Navigation -->
<partial name="_ManageNav" />

<!-- Change Password Form -->
<div class="max-w-2xl mx-auto bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.1s;">
    <div class="px-8 py-8">
        <!-- Success/Error Messages -->
        @if (Model.StatusMessage != null)
        {
            <div class="mb-6 animate-slide-down">
                <div class="bg-emerald-900/50 border border-emerald-700/50 text-emerald-200 px-4 py-3 rounded-xl backdrop-blur-sm" role="alert">
                    <div class="flex items-center">
                        <i data-lucide="check-circle" class="w-5 h-5 mr-2 text-emerald-400"></i>
                        <span>@Model.StatusMessage</span>
                    </div>
                </div>
            </div>
        }

        <form id="change-password-form" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-900/50 border border-red-700/50 rounded-xl text-red-200 text-sm" role="alert"></div>

            <!-- Current Password -->
            <div>
                <label asp-for="Input.OldPassword" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                    <i data-lucide="key" class="w-4 h-4 mr-2 text-slate-400"></i>
                    Current Password
                </label>
                <input asp-for="Input.OldPassword" type="password" autocomplete="current-password" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                <span asp-validation-for="Input.OldPassword" class="text-red-400 text-sm mt-1 flex items-center"></span>
            </div>

            <!-- New Password -->
            <div>
                <label asp-for="Input.NewPassword" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                    <i data-lucide="lock" class="w-4 h-4 mr-2 text-slate-400"></i>
                    New Password
                </label>
                <input asp-for="Input.NewPassword" type="password" autocomplete="new-password" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                <span asp-validation-for="Input.NewPassword" class="text-red-400 text-sm mt-1 flex items-center"></span>
            </div>

            <!-- Confirm Password -->
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-slate-300 text-sm font-semibold mb-3 flex items-center">
                    <i data-lucide="lock-keyhole" class="w-4 h-4 mr-2 text-slate-400"></i>
                    Confirm New Password
                </label>
                <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" class="w-full px-4 py-3 bg-slate-600/50 border border-slate-500/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm mt-1 flex items-center"></span>
            </div>

            <!-- Password Requirements -->
            <div class="p-4 bg-slate-700/30 border border-slate-600/50 rounded-xl">
                <h4 class="text-sm font-semibold text-white mb-2 flex items-center">
                    <i data-lucide="shield-check" class="w-4 h-4 mr-2 text-brand-400"></i>
                    Password Requirements
                </h4>
                <ul class="text-xs text-slate-400 space-y-1 ml-6">
                    <li class="flex items-center">
                        <i data-lucide="check" class="w-3 h-3 mr-2 text-emerald-400"></i>
                        At least 6 characters long
                    </li>
                    <li class="flex items-center">
                        <i data-lucide="check" class="w-3 h-3 mr-2 text-emerald-400"></i>
                        Contains uppercase and lowercase letters
                    </li>
                    <li class="flex items-center">
                        <i data-lucide="check" class="w-3 h-3 mr-2 text-emerald-400"></i>
                        Contains at least one number
                    </li>
                </ul>
            </div>

            <!-- Save Button -->
            <div class="flex items-center justify-between pt-6 border-t border-slate-700/50">
                <div class="text-sm text-slate-400 flex items-center">
                    <i data-lucide="info" class="w-4 h-4 mr-2"></i>
                    You will be logged out after changing password
                </div>
                <button type="submit" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 text-white font-semibold rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl">
                    <i data-lucide="save" class="w-4 h-4 mr-2"></i>
                    Update Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}
