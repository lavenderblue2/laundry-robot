@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="background: linear-gradient(135deg, var(--bg-dark) 0%, #1a1923 100%);">
    <div class="max-w-md w-full space-y-8">
        <!-- Success Icon -->
        <div class="text-center">
            <div class="flex justify-center mb-6">
                <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-green-600 rounded-2xl flex items-center justify-center shadow-2xl">
                    <i data-lucide="mail-check" class="w-8 h-8 text-white"></i>
                </div>
            </div>
            <h2 class="text-3xl font-bold text-white mb-2">Check Your Email</h2>
            <p class="text-slate-400">Password reset instructions have been sent</p>
        </div>

        <!-- Info Card -->
        <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-slate-700/50 p-8">
            <div class="text-center space-y-4">
                <p class="text-slate-300">
                    If an account exists with the email you provided, you will receive an email with instructions to reset your password.
                </p>
                <p class="text-slate-400 text-sm">
                    Please check your inbox and spam folder.
                </p>
            </div>

            <div class="mt-8">
                <a asp-page="./Login" class="w-full flex items-center justify-center px-4 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-brand-500/50 transform hover:scale-[1.02]">
                    <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
