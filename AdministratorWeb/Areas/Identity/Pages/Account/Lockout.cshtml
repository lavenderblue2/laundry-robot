@page
@model LockoutModel
@{
    ViewData["Title"] = "Account Locked";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="background: linear-gradient(135deg, var(--bg-dark) 0%, #1a1923 100%);">
    <div class="max-w-md w-full space-y-8">
        <!-- Warning Icon -->
        <div class="text-center">
            <div class="flex justify-center mb-6">
                <div class="w-16 h-16 bg-gradient-to-br from-red-500 to-red-700 rounded-2xl flex items-center justify-center shadow-2xl">
                    <i data-lucide="shield-alert" class="w-8 h-8 text-white"></i>
                </div>
            </div>
            <h2 class="text-3xl font-bold text-white mb-2">Account Locked</h2>
            <p class="text-slate-400">Your account has been temporarily locked</p>
        </div>

        <!-- Lockout Card -->
        <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-slate-700/50 p-8">
            <div class="text-center space-y-4">
                <div class="bg-red-900/30 border border-red-700/50 rounded-xl p-4">
                    <div class="flex items-start">
                        <i data-lucide="alert-triangle" class="w-5 h-5 text-red-400 mt-0.5 mr-3 flex-shrink-0"></i>
                        <p class="text-sm text-red-200 text-left">
                            This account has been locked out due to too many failed login attempts. Please try again later or contact an administrator.
                        </p>
                    </div>
                </div>

                <p class="text-slate-300 text-sm">
                    For security reasons, we've temporarily locked your account after multiple unsuccessful login attempts.
                </p>
            </div>

            <div class="mt-8 space-y-3">
                <a asp-page="./Login" class="w-full flex items-center justify-center px-4 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-brand-500/50 transform hover:scale-[1.02]">
                    <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
                    Back to Login
                </a>

                <a asp-page="./ForgotPassword" class="w-full flex items-center justify-center px-4 py-3 text-sm font-medium text-slate-300 hover:text-white border border-slate-600 hover:border-slate-500 rounded-xl transition-all duration-200">
                    <i data-lucide="key-round" class="w-5 h-5 mr-2"></i>
                    Reset Password
                </a>
            </div>
        </div>

        <!-- Contact Support -->
        <div class="bg-blue-900/30 border border-blue-700/50 rounded-xl p-4">
            <div class="flex items-start">
                <i data-lucide="help-circle" class="w-5 h-5 text-blue-400 mt-0.5 mr-3 flex-shrink-0"></i>
                <div class="text-sm text-blue-200">
                    <p class="font-medium mb-1">Need help?</p>
                    <p>Contact your system administrator if you believe this is an error.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
