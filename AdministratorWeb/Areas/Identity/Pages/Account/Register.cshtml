@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="background: linear-gradient(135deg, var(--bg-dark) 0%, #1a1923 100%);">
    <div class="max-w-md w-full space-y-8">
        <!-- Logo and Title -->
        <div class="text-center">
            <div class="flex justify-center mb-6">
                <div class="w-16 h-16 bg-gradient-to-br from-brand-500 via-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-2xl">
                    <i data-lucide="washing-machine" class="w-8 h-8 text-white"></i>
                </div>
            </div>
            <h2 class="text-3xl font-bold text-white mb-2">Create Account</h2>
            <p class="text-slate-400">Register for admin dashboard access</p>
        </div>

        <!-- Register Card -->
        <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-slate-700/50 p-8">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-900/50 border border-red-700/50 rounded-xl text-red-200 text-sm" role="alert"></div>

                <!-- Email -->
                <div class="mb-5">
                    <label asp-for="Input.Email" class="block text-slate-300 text-sm font-medium mb-2">Email Address</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i data-lucide="mail" class="w-5 h-5 text-slate-400"></i>
                        </div>
                        <input asp-for="Input.Email" class="block w-full pl-12 pr-4 py-3.5 bg-slate-700/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" autocomplete="username" aria-required="true" placeholder="your@email.com" />
                        <span asp-validation-for="Input.Email" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-5">
                    <label asp-for="Input.Password" class="block text-slate-300 text-sm font-medium mb-2">Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i data-lucide="lock" class="w-5 h-5 text-slate-400"></i>
                        </div>
                        <input asp-for="Input.Password" type="password" class="block w-full pl-12 pr-4 py-3.5 bg-slate-700/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" autocomplete="new-password" aria-required="true" placeholder="Minimum 3 characters" />
                        <span asp-validation-for="Input.Password" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="mb-6">
                    <label asp-for="Input.ConfirmPassword" class="block text-slate-300 text-sm font-medium mb-2">Confirm Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i data-lucide="lock" class="w-5 h-5 text-slate-400"></i>
                        </div>
                        <input asp-for="Input.ConfirmPassword" type="password" class="block w-full pl-12 pr-4 py-3.5 bg-slate-700/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500/50 focus:border-transparent transition-all duration-200" autocomplete="new-password" aria-required="true" placeholder="Re-enter password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- Submit Button -->
                <button id="registerSubmit" type="submit" class="w-full flex items-center justify-center px-4 py-3.5 text-sm font-semibold text-white bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-brand-500/50 transform hover:scale-[1.02]">
                    <i data-lucide="user-plus" class="w-5 h-5 mr-2"></i>
                    Create Account
                </button>

                <!-- Login Link -->
                <div class="mt-6 text-center">
                    <p class="text-sm text-slate-400">
                        Already have an account?
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-brand-400 hover:text-brand-300 font-medium transition-colors">
                            Sign in
                        </a>
                    </p>
                </div>
            </form>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl shadow-2xl border border-slate-700/50 p-6">
                <div class="relative mb-4">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-700"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-slate-800 text-slate-400">Or register with</span>
                    </div>
                </div>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="space-y-3">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account" class="w-full flex items-center justify-center px-4 py-3 bg-slate-700/50 hover:bg-slate-700 border border-slate-600/50 rounded-xl text-white text-sm font-medium transition-all duration-200">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        lucide.createIcons();
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => lucide.createIcons(), 100);
        });
    </script>
}
